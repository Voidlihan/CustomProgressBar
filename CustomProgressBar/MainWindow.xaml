<Window x:Class="CustomProgressBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomProgressBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="157" Stroke="Black" VerticalAlignment="Center" Width="650" Fill="#FF323030"/>
        <ProgressBar x:Name="loadingBar" Value="20" HorizontalAlignment="Center" Height="76" VerticalAlignment="Center" Width="548" Background="#FF404040" Foreground="Purple" IsIndeterminate="True"   MouseMove="loadingBar_MouseMove"/>
    </Grid>
</Window>
